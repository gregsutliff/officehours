<div class='modal-dialog'>
  <div class='modal-content'>
    <div class='modal-header'>
      <h3>New Department</h3>
    </div>
    <div class='modal-body'>
      <%= form_for [:admin, @department], remote: true, html: {style: 'display:inline;'} do |d| %>
        <div class='form-group'>
          <%= d.label :name, class: 'control-group' %>
          <%= d.text_field :name, placeholder: 'Full Name', class: 'form-control' %>
        </div>
        <div class='form-group'>
          <%= d.label :abbrev, class: 'control-group' %>
          <%= d.text_field :abbrev, placeholder: 'Abbreviation', class: 'form-control' %>
        </div>
        <div class='modal-footer'>
          <%= d.submit 'Create Department', class: 'btn btn-primary' %>
          <%= link_to 'Cancel', '#', class: 'btn', data: {dismiss: 'modal'} %>
        </div>
      <% end %>
    </div>
  </div>
</div>
