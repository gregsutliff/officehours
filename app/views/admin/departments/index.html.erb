<h1>Admin::Departments#index</h1>
<p>Find me in app/views/admin/departments/index.html.erb</p>
<%= link_to 'Add New Department', new_admin_department_path %>
<table class='table'>
  <tr>
    <th>Department Name</th>
    <th>Department Abbreviation</th>
    <th>Actions</th>
  </tr>
  <% @departments.each do |d| %>
    <tr>
      <td><%= d.name %></td>
      <td><%= d.abbrev %></td>
      <td><%= link_to 'Edit', edit_admin_department_path(d) %> <%= link_to 'Delete', admin_department_path(d), method: 'delete' %></td>
    </tr>
  <% end %>
</table>


