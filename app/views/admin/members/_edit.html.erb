<div class='modal-dialog'>
  <div class='modal-content'>
    <div class='modal-header'>
      <h3>Edit Record For <%= @current_member.firstname + ' ' + @current_member.lastname %></h3>
    </div>
    <%= form_for [:admin, @current_member], remote: true, html: {style: 'display:inline;'} do |f|  %>
      <div class='modal-body'>
        <div class='form-group'>
          <%= f.label :firstname, class: 'control-label' %>
          <%= f.text_field :firstname, class: 'form-control' %>
        </div>
        <div class='form-group'>
          <%= f.label :lastname, class: 'control-group' %>
          <%= f.text_field :lastname, class: 'form-control' %>
        </div>
        <div class='form-group'>
          <%= f.label :email, class: 'control-group' %>
          <%= f.text_field :email, class: 'form-control' %>
        </div>
        <div class='form-group'>
          <%= f.label :department_id, class:'control-group' %>
          <%= f.collection_select :department_id, Department.all, :id, :name, class: 'form-control' %>
        </div>
        <div class='form-group'>
          <%= f.label :building_id, class: 'control-group' %>
      	  <%= f.collection_select  :building_id, Building.all, :id, :fullname, class: 'form-control' %>
        </div>
        <div class='form-group'>
          <%= f.label :door_number, class: 'control-group' %>
          <%= f.text_field :door_number, class: 'form-control' %>
        </div>
        <div class='modal-footer'>
          <%= f.submit class:'btn btn-primary' %>
          <%= link_to 'Cancel', '#', class: 'btn', data: {dismiss: 'modal'} %>
        </div>
      </div>
    <% end %>
  </div>
</div>
