<div class='modal-dialog'>
  <div class='modal-content'>
    <div class='modal-header'>
      <h3>New Member</h3>
    </div>
    <%= form_for [:admin, @member], remote: true, html: {style: 'display:inline;'} do |f| %>
      <div class='modal-body'>
        <ul class='errors'></ul>

        <div class='form-group'>
          <%= f.label :firstname, class: 'control-label' %>
          <%= f.text_field :firstname, class: 'form-control' %>
        </div>

        <div class='form-group'>
          <%= f.label :lastname, class: 'control-label' %>
          <%= f.text_field :lastname, class: 'form-control' %>
        </div>

        <div class='form-group'>
          <%= f.label :email, class: 'control-label' %>
          <%= f.text_field :email, class: 'form-control' %>
        </div>

        <div class='form-group'>
          <%= f.label :department_id, class: 'control-label' %>
          <%= f.collection_select :department_id, Department.all, :id, :name %>
        </div>

        <div class='form-group'>
          <%= f.label :building_id, class: 'control-label' %>
          <%= f.collection_select :building_id, Building.all, :id, :fullname %>
        </div>

        <div class='form-group'>
          <%= f.label :door_number, class: 'control-lable' %>
          <%= f.text_field :door_number, class: 'form-control' %>
        </div>
      </div>
      <div class='modal-footer'>
        <%= f.submit class:'btn btn-primary' %>
        <%= link_to 'Cancel', '#', class: 'btn', data: {dismiss: 'modal'} %>
      </div>
    <% end %>
  </div>
</div>
