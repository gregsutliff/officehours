<div class='modal-dialog'>
  <div class='modal-content'>
    <div class='modal-header'>
      <h3>New Building</h3>
    </div>
    <div class='modal-body'>
      <%= form_for [:admin, @building], remote: true, html: {style: 'format:inline;'} do |f| %>
        <div class='form-group'>
          <%= f.label :fullname, class: 'control-group' %>
          <%= f.text_field :fullname, class: 'form-control' %>
        </div>
        <div class='form-group'>
          <%= f.label :abbrev, class: 'control-group' %>
          <%= f.text_field :abbrev, class: 'form-control' %>
        </div>
        <div class='form-group'>
          <%= f.label :avatar, class: 'control-group' %>
          <%= f.file_field :avatar, class: 'form-control' %>
        </div>
        <div class='modal-footer'>
          <%= f.submit class: 'btn btn-primary' %>
          <%= link_to 'Cancel', '#', class: 'btn', data: {dismiss: 'modal'} %>
        </div>
      <% end %>
    </div>
  </div>
</div>
