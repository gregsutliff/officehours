<h1>Update The Record for <%= @building.fullname %></h1>
<%= form_for [:admin, @building], html: {style:'format:inline;'} do |b| %>
  <div class='form-group'>
    <%= b.label :fullname, class: 'control-group' %>
    <%= b.text_field :fullname, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= b.label :abbrev, class: 'control-group' %>
    <%= b.text_field :abbrev, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= b.label :avatar, class: 'control-group' %>
    <%= b.file_field :avatar, class: 'form-control' %>
  </div>
  <%= b.submit 'Submit' %>
<% end %>

