<div class="row">
	<div class="col-xs-5">
		<%= render 'search_form' %>
	</div>
	<div class="col-xs-7"></div>
</div>

<div class='row'>
  <div class='col-xs-11'>
		<h4>Open Office Hours:</h4>
    <table class="table ">
      <% @open_hours.each do |h| %>
        <tr class='hour'>
        	<td class="building">
        		<div class="building_thumb"><%= image_tag(h.building.image_path) %></div>
        		<div class="building_name"><%= h.building.fullname %></div>
        	</td>
			<td class="member_info">
				<ul>
					<li class="member_name"><%= h.member_fullname %></li>
					<li><%= h.member.department_name %></li>
					<li class="door_number">Office <%= h.office.door_number %></li>
				</ul>
			</td>
			<td class="timer">
				<ul>
					<li>Time Left</li>
					<li class="countdown" data-countdown="<%= "#{Time.now.strftime('%m/%d/%Y')} #{h.stop.strftime('%H:%M:%S')}" %>"></li>
				</ul>
			</td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
        
